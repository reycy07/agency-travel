extends ./layout/index

block content 
    main.container.mt-5
        h1.text-center.mt-5 #{page}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias 
        include ./layout/testimonials_block
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agregar Un testimonial
                if(errors)
                    each error in errors 
                        .alert.col.alert-danger.text-center= error.message
            .row.justify-content-center.col
                .col-md-8
                    form(action="", method="post")
                        .form-group
                            label(for="name") Nombre
                            input#name(type="text", placeholder="Tu Nombre", name="name", class="form-control", value=name)
                        .form-group
                            label(for="email") Email
                            input#name(type="email", placeholder="Tu Email", name="email", class="form-control", value=email)
                        .form-group
                            label(for="message") Mensaje
                            textarea#messsage(class="form-control", name="message", placeholder="Tu Mensaje", row=3)= message 
                        input.btn.btn-success.btn-block(type="submit")