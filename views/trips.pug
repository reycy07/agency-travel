extends ./layout/index
block content 
    h1(class="mt-5 text-center") #{page}
    main.container.mt-5
        .row.proximos-viajes 
            each trip in trips 
                .col-md-6.col-lg-4.mb-4 
                    .card 
                        img.card-img-top(src=`img/destinos_${trip.imagen}.jpg`, alt="")
                        .card-body 
                            h2=trip.titulo
                            p 
                                svg.icon.icon-tabler.icon-tabler-calendar-share(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M12 21h-6a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v6')
                                    path(d='M16 3v4')
                                    path(d='M8 3v4')
                                    path(d='M4 11h16')
                                    path(d='M16 22l5 -5')
                                    path(d='M21 21.5v-4.5h-4.5')

                                | #{trip.fecha_ida} - #{trip.fecha_vuelta}
                            p
                                svg.icon.icon-tabler.icon-tabler-users(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0')
                                    path(d='M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                                    path(d='M16 3.13a4 4 0 0 1 0 7.75')
                                    path(d='M21 21v-2a4 4 0 0 0 -3 -3.85')

                                | #{trip.disponibles} Disponibles
                            p= trip.descripcion.substr(0,100) + '...'
                            a(href=`trips/${trip.slug}`, class="btn btn-success btn-block")  Más información